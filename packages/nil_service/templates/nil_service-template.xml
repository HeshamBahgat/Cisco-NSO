<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="nil_service">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <interface xmlns="urn:ios">
          <Loopback>
            <name>{/id}</name>
            <description>GigabitEthernet-service</description>
            <ip>
              <address>
                <primary>
                  <address>{/ip-address}</address>
                  <mask>{/mask}</mask>
                </primary>
              </address>
            </ip>
          </Loopback>
        </interface>
      </config>
    </device>
  </devices>
</config-template>
